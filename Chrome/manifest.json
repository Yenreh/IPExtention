{
  "manifest_version": 3,
  "name": "IP Address Viewer",
  "version": "1.1.0",
  "description": "Muestra tus direcciones IPv4 e IPv6 públicas con botones de copia rápida",
  "permissions": ["storage"],
  "host_permissions": ["https://api64.ipify.org/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/ip-address-16.png",
      "32": "icons/ip-address-32.png",
      "48": "icons/ip-address-48.png",
      "128": "icons/ip-address-128.png"
    },
    "default_title": "IP Address Viewer"
  },
  "icons": {
    "16": "icons/ip-address-16.png",
    "32": "icons/ip-address-32.png",
    "48": "icons/ip-address-48.png",
    "128": "icons/ip-address-128.png"
  }
}

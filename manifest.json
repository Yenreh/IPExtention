{
    "manifest_version": 3,
    "name": "IP Address Viewer",
    "version": "1.0",
    "description": "Displays IPv4 and IPv6 addresses with quick copy buttons.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api64.ipify.org/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/ip-address-16.png",
            "32": "icons/ip-address-32.png",
            "48": "icons/ip-address-48.png",
            "128": "icons/ip-address-128.png"
        }
    }
}